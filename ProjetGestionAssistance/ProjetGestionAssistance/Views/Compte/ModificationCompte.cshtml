@model ProjetGestionAssistance.Models.Compte

@{
    ViewData["Title"] = "Modification du compte";
}

<h2>Modification du compte</h2>

<form asp-action="ModifierCompte">
    <div class="form-horizontal">
        <div>
            <a asp-action="AfficherGestionCompte" asp-route-ordre="@(ViewData["ordre"])" asp-route-page="@(ViewData["page"])">Revenir a la liste des comptes</a>
        </div>
        <p class="text-success">@Html.Raw(ViewData["MessageModificationCompte"])</p>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Courriel" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Courriel" class="form-control" />
                <span asp-validation-for="Courriel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MotPasse" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MotPasse" class="form-control" />
                <span asp-validation-for="MotPasse" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Nom" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Prenom" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Telephone" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Type" class="form-control" >
                    <option value="0">Demandeur</option>
                    <option value="1">Employ&eacute;</option>
                    <option value="2">Gestionnaire</option>
                    <option value="3">Administrateur</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Actif" id="etat" />
                    <label asp-for="Actif"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Département</label>
            <div class="col-md-10">
                <select name="DepartementId" id="DepartementId" onchange="changerEquipeParDepartement()" class="form-control" asp-items="ViewBag.DepartementID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EquipeId" class="control-label col-md-2">&Eacute;quipe</label>
            <div class="col-md-10">
                <select asp-for="EquipeId" class="form-control" asp-items="ViewBag.EquipeId"></select>
                <span asp-validation-for="EquipeId" class="text-danger"></span>
            </div>
        </div>
        <input type="hidden" asp-for="ConfirmationMotPasse" value="@Model.MotPasse" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sauvegarder" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<script>
    function changerEquipeParDepartement() {
        // On va chercher le Id du département selectionner 
        var id = $("#DepartementId option:selected").val();
        // on va chercher la liste de tout les équipes faisant partie de ce département
        $.ajax({
            type: "Post",
            url: "/Compte/ListeEquipeParDepartementId/" + id,
            datatype: "json",
            success: function (Equipe) {
                // On créé un nouveau select avec les nouvelles équipes
                var nouveauSelect = "<select name =\"EquipeId\" id=\"EquipeId\" class=\"form-control\"  onchange=\"changerCompteParEquipe()\">";
                for (i= 0; i < Object.keys(Equipe).length;i++){
                    nouveauSelect += " <option value=\""+Equipe[i].id+"\">"+Equipe[i].nom+"</option> ";
                }
                nouveauSelect += "</select >";
                // On remplace ce qui est dans le select #EquipeId par le nouveau select
                $("#EquipeId").replaceWith(nouveauSelect);
                changerCompteParEquipe();
            }

        })
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


